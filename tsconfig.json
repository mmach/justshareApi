{
  "compileOnSave": true,
  "files": [
    "./src/index.js"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES6",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "strict": true,
    "moduleResolution": "Node",

    "lib": [
      "esnext"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./.compiled/**/*",
    "./node_modules",
    "./dist/**/*",
  ]
}